.container {
  padding: 20rpx;
  
}

.grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  
}

.grid-item {
  width: 48%;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.grid-item image {
  width: 100%;
  height: 200rpx;
}

.grid-item text {
  display: block;
  padding: 10rpx;
  text-align: center;
  font-size: 28rpx;
}

