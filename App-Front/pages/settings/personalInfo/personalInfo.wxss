.container {
  padding: 20px;
  background-color: #f0f8ff;
  min-height: 100vh;
}

.section {
  width: 90%;
  background-color: #fff;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 14px;
  color: #666;
}

.form-group {
  width: 100%;
  margin-bottom: 20px;
}

.label {
  display: block;
  margin-bottom: 5px;
  font-size: 14px;
  color: #333;
  
}

.input {
  width: 93%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 10px;
  font-size: 14px;
}

.radio-group {
  display: flex;
  flex-direction: row;
}

.radio {
  margin-right: 20px;
}

.picker {
  width: 93%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 10px;
  font-size: 14px;
  line-height: 40px;
}

.submit-btn {
  width: 100%;
  height: 44px;
  background-color: #007aff;
  color: #fff;
  font-size: 16px;
  border-radius: 4px;
  margin-top: 20px;
}