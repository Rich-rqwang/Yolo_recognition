.container {
  padding: 20px;
  background-color: #f0fff0;
  min-height: 100vh;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 14px;
  color: #666;
}

.contact-info {
  background-color: #fff;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 20px;
  width: 90%;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;

}

.icon {
  width: 20px;
  height: 20px;
  margin-right: 10px;
}

.form {
  background-color: #fff;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 20px;
  width: 90%;
}

.form-group {
  margin-bottom: 15px;
}

.label {
  display: block;
  margin-bottom: 5px;
  font-size: 14px;
  color: #333;
}

.input {
  width: 93%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 10px;
  font-size: 14px;
}

.textarea {
  width:93%;
  height: 100px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 10px;
  font-size: 14px;
  
}

.btn-submit {
  width: 100%;
  height: 44px;
  background-color: #4caf50;
  color: #fff;
  font-size: 16px;
  border-radius: 4px;
}

.faq {
  width: 90%;
  background-color: #fff;
  border-radius: 8px;
  padding: 15px;
}

.faq-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
}

.faq-item {
  width: 100%;
  margin-bottom: 10px;
text-align: center;
}

.faq-link {
  color: #4caf50;
  text-decoration: underline;
}