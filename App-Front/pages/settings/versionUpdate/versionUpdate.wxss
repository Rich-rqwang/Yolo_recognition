.container {
  padding: 20px;
  background-color: #e6f3ff;
  min-height: 100vh;
  
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
  
}

.subtitle {
  font-size: 15px;
  color: #666;
}

.version-info {
  background-color: #fff;
  border-radius: 8px;
  padding: 20px ;
  width: 90%;
}

.version-item {
  display:-ms-grid;
 text-align: center;
  margin-bottom: 10px;
}

.version-label {
  font-size: 16px;
  color: #333;
  align-items: inherit;
 
}

.version-number {
  font-size: 18px;
  font-weight: bold;
  color: #007aff;
  align-items:stretch;
  width: 60px;
}

.btn-update {
  width: 100%;
  height: 44px;
  background-color: #007aff;
  color: #fff;
  font-size: 16px;
  border-radius: 4px;
  margin-bottom: 0px;
  
}

.btn-update[disabled] {
  background-color: #ccc;
 
}

.btn-check {
  width: 100%;
  height: 44px;
  background-color: #fff;
  color: #007aff;
  font-size: 16px;
  border-radius: 4px;
  border: 1px solid #007aff;
}