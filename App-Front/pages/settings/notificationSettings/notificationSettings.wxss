.container {
  padding: 20px;
  background-color: #fffaf0;
  min-height: 100vh;

}

.title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 14px;
  color: #666;
}

.section {
  background-color: #fff;
  border-radius: 8px;
  padding: 15px;
  width: 90%;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.notification-list {
  width: 100%;
  margin-top: 15px;

}

.notification-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid #eee;
  margin-top: 15px;
  
}

.notification-item:last-child {
  border-bottom: none;
}

.frequency-group {
  display: flex;
  width: 300px;
  margin-top: 10px;
  flex-direction: column;
}

.frequency-item {
  margin-bottom: 15px;
  margin-top: 15px;
}

.btn-save {
  width: 100%;
  height: 44px;
  background-color: #ffa500;
  color: #fff;
  font-size: 16px;
  border-radius: 4px;
  margin-top: 20px;
}