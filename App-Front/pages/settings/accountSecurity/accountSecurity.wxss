.container {
  padding: 20px;
  background-color: #f0fff0;
  min-height: 100vh;
  display: list-item;
}

.header {
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 14px;
  color: #666;
}

.section {
  background-color: #fff;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 20px;
}

.section-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
}

.form-group {
  width: 100%;
  margin-bottom: 15px;
}

.label {
  margin-top: 15px;
  display: block;
  margin-bottom: 5px;
  font-size: 14px;
  color: #333;
}

.input {
  width: 93%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 10px;
  font-size: 14px;

}

.btn {
  width: 99%; 
  height: 50px;
  background-color: #4caf50;
  color:#fff ;
  font-size: 16px;
  border-radius: 4px;
  margin-top: 10px;
}

.btn-outline {
  width: 300px;
  background-color: transparent;
  border: 1px solid #4caf50;
  color: #4caf50;
}

.switch-container {
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
}