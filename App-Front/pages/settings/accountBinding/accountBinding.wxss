.container {
  padding: 20px;
  background-color: #f0f0ff;
  min-height: 100vh;
  display: list-item;
}

.account-list {
  width: 100%;
  background-color: #fff;
  border-radius: 8px;
  overflow: hidden;
}

.account-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px;
  border-bottom: 1px solid #eee;
}

.account-item:last-child {
  border-bottom: none;
}

.account-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.account-icon {
  width: 24px;
  height: 24px;
  margin-right: 10px;
}

.account-name {
  font-size: 16px;
  color: #333;
}

.btn-binding {
  padding: 5px 15px;
  font-size: 14px;
  border-radius: 4px;
  min-width: 60px;
}

.btn-bind {
  background-color: #4285f4;
  color: #fff;
}

.btn-unbind {
  background-color: #f44336;
  color: #fff;
}

.btn-save {
  width: 100%;
  height: 45px;
  background-color: #4a0e4e;
  color: #fff;
  font-size: 16px;
  border-radius: 4px;
  margin-top: 20px;
}